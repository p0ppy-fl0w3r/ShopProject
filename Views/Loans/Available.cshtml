@using MyShop.DTOs
@model IEnumerable<CopyDto>;

@if (!string.IsNullOrEmpty(ViewBag.message))
{
    <button type="button" id="error-button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#errorModal" hidden>
        Launch demo modal
    </button>

    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">Oops!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@foreach (var copy in Model)
{

    <div class="card">
        <div class="card-body">
            <p>@copy.Dvdcopy.Dvd.DvDname</p>
            <p>@copy.Dvdcopy.Dvd.Rate</p>

            <form asp-action="LoanToMember">

                <input asp-for="@copy.CopyId" value="@copy.Dvdcopy.CopyId" hidden />

                <div class="form-group">
                    <label asp-for="@copy.MemberId" class="control-label"></label>
                    <input asp-for="@copy.MemberId" class="form-control" />
                    <span asp-validation-for="@copy.MemberId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@copy.TypeId" class="control-label"></label>
                    <select asp-for="@copy.TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                    <span asp-validation-for="@copy.TypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Loan" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


}


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script type="text/javascript">
    // Show the error message if there w
    var errorButton = document.getElementById("error-button");
    if(errorButton != null){
        errorButton.click();
    }

</script>
}
