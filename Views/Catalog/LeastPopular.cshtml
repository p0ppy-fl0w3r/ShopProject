@using MyShop.Data
@model List<Dvdtitle>

@inject ApplicationDbContext database

@{
    ViewData["title"] = "Least Popular";
}

<h1>Least Popular DvDs</h1>

<p>Showing DvDs whose copies have not been rented for the last 31 days or haven't been rented once.</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>DvD Title</th>
            <th>DvD Id</th>
            <th>Total Copies</th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @{
                        var sn = i + 1;
                        var dvdTitle = Model[i];
                    }
                    @sn
                </td>

                <td>
                    @dvdTitle.DvDname
                </td>

                <td>
                    @dvdTitle.DvdId
                </td>

                <td>
                    @dvdTitle.Dvdcopies.Count()
                </td>

            </tr>
        }
    </tbody>

</table>
