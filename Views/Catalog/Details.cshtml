@model MyShop.Models.Dvdtitle

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.DvDname</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Release Date
        </dt>
        <dd class="col-sm-10">
            @{
                var dateRelease = @Model.DateReleased.ToString("d");
            }
            @dateRelease
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
        <dt class="col-sm-2">
            Penalty Rate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PenaltyRate)
        </dd>
        <dt class="col-sm-2">
            Age Restriction
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Category.AgeRestricted)
            {
                <span class="badge bg-danger">Age Restricted</span>
            }
            else
            {
                <span class="badge bg-success">Not Restricted</span>
            }
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category.CategoryDescription

        </dd>
        <dt class="col-sm-2">
            Producer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produce.ProducerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.StudioName)
        </dd>
    </dl>
</div>
<h4>Actors</h4>
<hr>

<div class="d-flex flex-wrap">

    @foreach (var actor in Model.Actors)
    {
        <p class="h4 mx-3 p-1"><span class="badge rounded-pill bg-primary"> <i class="bi bi-dot"></i> @actor.ActorName @actor.ActorLastName</span></p>

    }

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
