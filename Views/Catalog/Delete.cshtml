@model MyShop.Models.Dvdtitle

@{
    ViewData["Title"] = "Delete";
}

<h4>Are you sure you want to delete this?</h4>
<div>
    <h3>@Model.DvDname</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Release Date
        </dt>
        <dd class = "col-sm-10">
            @{
                var releaseDate = @Model.DateReleased.ToString("d");
            }
            @releaseDate
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rate)
        </dd>
        <dt class = "col-sm-2">
            Penalty Rate
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PenaltyRate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDescription)
        </dd>
        <dt class = "col-sm-2">
            Producer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produce.ProducerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Studio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Studio.StudioName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DvdId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
